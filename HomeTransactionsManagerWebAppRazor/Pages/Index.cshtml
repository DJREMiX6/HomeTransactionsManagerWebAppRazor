@page
@model HomeTransactionsManagerWebAppRazor.Pages.Index
@{
}

<div class="container p-3">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info custom-control-inline">Transactions List</h2>
        </div>
        <div class="col-3">
            <a class="btn btn-secondary w-100" asp-page="/Create">Add Transaction</a>
        </div>
        <div class="col-3">
            <a class="btn btn-success w-100" asp-page="/TransactionsGraphicalVisualization">Graphical Visualization</a>
        </div>
    </div>
    <div class="row">
        <div class="col-12 text-center p-3">
            <h4 class="text-warning font-weight-bold">Petty Cash: €@Model.Transactions.Sum(x => x.Amount)</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <table id="DataTable" class="table table-striped border w-100">
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/data-table.js"></script>
    <script src="~/js/transactions-listing-manager.js"></script>
} 
